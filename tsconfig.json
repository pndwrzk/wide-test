{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS", 
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@routes/*": ["routes/*"],
        "@database/*": ["database/*"],
        "@utils/*": ["utils/*"],
        "@types/*": ["types/*"],
        "@modules/*": ["modules/*"]
      },
      "esModuleInterop": true,
      "typeRoots": ["node_modules/@types"],
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts", "src/database/models/index.ts", "src/config/sequelize-cli.js", "src/config/sequelize-cli.js"],
    "exclude": ["node_modules"]
  }
  